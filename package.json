{
  "name": "setup",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Setup and synchronize your dev environments on different platforms",
  "scripts": {
    "format": "biome check --write",
    "lint": "biome check",
    "typecheck": "npx tsc",
    "test:run": "node --test",
    "test:coverage": "node --test --experimental-test-coverage",
    "test:watch": "node --test --watch",
    "test": "npm run lint && npm run typecheck && npm run test:run"
  },
  "imports": {
    "#shared/*": "./platforms/shared/*",
    "#arch/*": "./platforms/arch/*",
    "#mac/*": "./platforms/mac/*"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.9",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/niels4/setup.git"
  },
  "author": "Niels Nielsen",
  "license": "MIT"
}
