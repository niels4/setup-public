# load zinit first
source "${ZINIT_HOME}/zinit.zsh"

# aliases

# alias rzsh defined in ./zshrc.d/reload_all_zsh.sh

# run setup
alias setup="~/s/setup.sh; rzsh"

# tmux shortcuts
alias webdev="~/s/webdev"
alias shelldev="~/s/shelldev"

# quickly edit zsh config
alias ezsh="nvim $ZDOTDIR/.zshrc"

# install default npm globals for current version of nodejs
alias npm-globals='xargs -r npm install -g < "${MISE_NODE_DEFAULT_PACKAGES_FILE}"'

# print gist by name
# example: print-gist niels4 setup-public-github.sh
alias print-gist="~/s/print-gist.sh"

# eval gist by name
# example: eval-gist niels4 setup-public-github.sh
alias eval-gist="bash -c \"\$(~/s/print-gist.sh)\""

# other aliases
alias ls='ls --color'
alias l='ls -lah'
alias github-test-ssh='ssh -T git@github.com'

# keybindings
bindkey -v
bindkey '^[[Z' reverse-menu-complete
bindkey '^p' history-search-backward
bindkey '^n' history-search-forward
bindkey '^y' autosuggest-accept

# source all files in autorun dir
for file in ${ZDOTDIR}/zshrc.d/*.sh; do
  source "$file"
done

eval "$(mise activate zsh --shims)"
